{
    "name": "Lingua Franca",
    "scopeName": "text.lflang",
    "fileTypes": [
        "lf"
    ],
    "repository": {
        "global": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#c-target"
                },
                {
                    "include": "#cpp-target"
                },
                {
                    "include": "#ts-target"
                },
                {
                    "include": "#py-target"
                }
            ]
        },
        "post-targetspec": {
            "patterns": [
                {
                    "include": "#context-insensitive"
                },
                {
                    "include": "#target-specification"
                },
                {
                    "include": "#import-statement"
                }
            ]
        },
        "context-insensitive": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#reactor-declaration"
                },
                {
                    "include": "#reactor-block"
                },
                {
                    "include": "#preamble"
                },
                {
                    "include": "#input-output"
                },
                {
                    "include": "#action"
                },
                {
                    "include": "#state"
                },
                {
                    "include": "#timer"
                },
                {
                    "include": "#type"
                },
                {
                    "include": "#number"
                },
                {
                    "include": "#string"
                },
                {
                    "include": "#boolean"
                },
                {
                    "include": "#time-unit"
                },
                {
                    "include": "#operator"
                },
                {
                    "include": "#startup-shutdown"
                },
                {
                    "include": "#time"
                },
                {
                    "include": "#deadline"
                },
                {
                    "include": "#instantiation"
                },
                {
                    "include": "#after"
                },
                {
                    "include": "#mutation"
                },
                {
                    "include": "#member-access-operator"
                }
            ]
        },
        "c-target": {
            "begin": "(?=^target C\\b)",
            "patterns": [
                {
                    "include": "#post-targetspec"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.c",
                    "patterns": [{
                        "include": "source.cpp"
                    }]
                }
            ]
        },
        "cpp-target": {
            "begin": "(?=^target Cpp\\b)",
            "patterns": [
                {
                    "include": "#post-targetspec"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.cpp",
                    "patterns": [{
                        "include": "source.cpp"
                    }]
                }
            ]
        },
        "ts-target": {
            "begin": "(?=^target TypeScript\\b)",
            "patterns": [
                {
                    "include": "#post-targetspec"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.ts",
                    "patterns": [{
                        "include": "source.ts"
                    }]
                }
            ]
        },
        "py-target": {
            "begin": "(?=^target Python\\b)",
            "patterns": [
                {
                    "include": "#post-targetspec"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.py",
                    "patterns": [{
                        "include": "source.python"
                    }]
                }
            ]
        },
        "target-specification": {
            "name": "meta.targetspec.lflang",
            "begin": "(?=^target\\b)",
            "end": ";|(?<=}.*)$|(?<=target[^\\{]*)$",
            "patterns": [
                {
                    "include": "#context-insensitive"
                },
                {
                    "name": "constant.language.lflang",
                    "match": "\\b(C|Cpp|Python|TypeScript)\\b"
                },
                {
                    "name": "keyword.control.lflang",
                    "match": "\\b(target)\\b"
                },
                {
                    "name": "variable.parameter.lflang",
                    "match": "(?<=(^|,|\\{)(\\s)*)\\b(\\w+)\\b(?=(\\s)*:)"
                }
            ]
        },
        "import-statement": {
            "begin": "(?=^import\\b)",
            "end": ";|(?<=}.*)$|(?<=import[^\\{]*)$",
            "patterns": [
                {
                    "include": "#context-insensitive"
                },
                {
                    "name": "keyword.control.import.lflang",
                    "match": "\\b(import)\\b|\\b(as)\\b|\\b(from)\\b"
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.lflang",
            "begin": "(^[ \\t]+)?(?=//|#)",
            "end": "(?=$)"
        },
        "blockcomment": {
            "patterns": [
                {
                    "name": "comment.block.lflang",
                    "begin": "/\\*(\\*)?(?!/)",
                    "end": "\\*/"
                }
            ]
        },
        "reactor-declaration": {
            "patterns": [
                {
                    "name": "storage.modifier.lflang",
                    "match": "\\b(reactor)\\b|\\b(federated)\\b|\\b(main)\\b|\\b(realtime)\\b|\\b(at)\\b|\\b(extends)\\b"
                },
                {
                    "name": "entity.name.type.lflang",
                    "match": "(?<=\\breactor\\b)(\\s*)(?!at)(?!extends)(\\w+)\\b"
                }
            ]
        },
        "reactor-block": {
            "patterns": [
                {
                    "name": "keyword.control.lflang",
                    "match": "\\b(reaction)\\b"
                }
            ]
        },
        "preamble": {
            "patterns": [
                {
                    "name": "keyword.control.lflang",
                    "match": "\\b(preamble)\\b"
                },
                {
                    "name": "keyword.control.lflang",
                    "match": "\\b(private|public)\\b"
                }
            ]
        },
        "input-output": {
            "patterns": [
                {
                    "name": "storage.modifier.lflang",
                    "match": "\\b(input|output|mutable)\\b"
                }
            ]
        },
        "action": {
            "patterns": [
                {
                    "name": "storage.modifier.lflang",
                    "match": "\\b(logical|physical)\\b"
                },
                {
                    "name": "storage.modifier.lflang",
                    "match": "\\b(action)\\b"
                }
            ]
        },
        "state": {
            "name": "storage.modifier.lflang",
            "match": "\\b(state)\\b"
        },
        "timer": {
            "name": "storage.modifier.lflang",
            "match": "\\b(timer)\\b"
        },
        "type": {
            "patterns": [
                {
                    "name": "entity.name.type.lflang",
                    "match": "(?<=(input|output|action|state).*:(\\s*))(\\b([A-Z]\\w*)\\b)"
                },
                {
                    "name": "storage.type.lflang",
                    "match": "(?<=(input|output|action|state).*:(\\s*))(\\b(\\w*)\\b)"
                }
            ]
        },
        "number": {
            "name": "constant.numeric.lflang",
            "match": "(?<!\\w)(\\-?\\d+)(.\\d+)?\\b"
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.triple.lflang",
                    "begin": "'''",
                    "end": "'''"
                },
                {
                    "name": "string.quoted.triple.lflang",
                    "begin": "\"\"\"",
                    "end": "\"\"\""
                },
                {
                    "name": "string.quoted.double.lflang",
                    "begin": "\"",
                    "end": "(?<=(\\\\.|[^\"\\\\])*)(\"|$)"
                },
                {
                    "name": "string.quoted.single.lflang",
                    "begin": "'",
                    "end": "(?<=(\\\\.|[^'\\\\])*)('|$)"
                }
            ]
        },
        "boolean": {
            "name": "constant.language.lflang",
            "match": "\\b(true|false)\\b"
        },
        "time-unit": {
            "name": "support.constant.lflang",
            "match": "\\b(nsec|nsecs|usec|usecs|msec|msecs|sec|secs|second|seconds|min|mins|minute|minutes|hour|hours|day|days|week|weeks)\\b"
        },
        "operator": {
            "name": "keyword.operator.lflang",
            "match": "->|\\+|-|\\*|/|=|%|@"
        },
        "startup-shutdown": {
            "name": "support.variable.lflang",
            "match": "\\b(startup|shutdown)\\b"
        },
        "time": {
            "name": "storage.type.lflang",
            "match": "\\b(time)\\b"
        },
        "deadline": {
            "name": "keyword.control.lflang",
            "match": "\\b(deadline)\\b"
        },
        "instantiation": {
            "patterns": [
                {
                    "name": "keyword.control.new.lflang",
                    "match": "\\b(new)\\b"
                },
                {
                    "name": "variable.other.lflang",
                    "match": "\\b(\\w+)(?=\\s*=\\s*new\\b)"
                },
                {
                    "name": "entity.name.type.lflang",
                    "match": "(?<=\\s*=\\s*new\\s+)\\w+\\b"
                }
            ]
        },
        "after": {
            "name": "keyword.control.lflang",
            "match": "\\b(after)\\b"
        },
        "mutation": {
            "name": "keyword.control.lflang",
            "match": "\\b(mutation)\\b"
        },
        "member-access-operator": {
            "patterns": [
                {
                    "name": "variable.other.lflang",
                    "match": "(\\b\\w+\\b)(?=\\.\\w+)"
                },
                {
                    "name": "variable.other.lflang",
                    "match": "(?<=\\w+\\.)(\\b\\w+\\b)"
                }
            ]
        }
    },
    "patterns": [
        {
            "include": "#global"
        }
    ],
    "uuid": "cd57a55d-0af5-4750-a6a0-3b7108553c2a"
}