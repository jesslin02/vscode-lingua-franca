{
    "name": "Lingua Franca",
    "scopeName": "text.lflang",
    "fileTypes": [
        "lf"
    ],
    "repository": {
        "global": {
            "patterns": [
                {
                    "include": "#general"
                },
                {
                    "include": "#c-target"
                },
                {
                    "include": "#cpp-target"
                },
                {
                    "include": "#ts-target"
                },
                {
                    "include": "#py-target"
                }
            ]
        },
        "general": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                }
            ]
        },
        "top-level": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#target-specification"
                },
                {
                    "include": "#import-statement"
                },
                {
                    "include": "#reaction-declaration"
                },
                {
                    "include": "#reactor-block"
                }
            ]
        },
        "c-target": {
            "begin": "(?=^target C\\b)",
            "patterns": [
                {
                    "include": "#top-level"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.c",
                    "patterns": [{
                        "include": "source.cpp"
                    }]
                }
            ]
        },
        "cpp-target": {
            "begin": "(?=^target Cpp\\b)",
            "patterns": [
                {
                    "include": "#top-level"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.cpp",
                    "patterns": [{
                        "include": "source.cpp"
                    }]
                }
            ]
        },
        "ts-target": {
            "begin": "(?=^target TypeScript\\b)",
            "patterns": [
                {
                    "include": "#top-level"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.ts",
                    "patterns": [{
                        "include": "source.ts"
                    }]
                }
            ]
        },
        "py-target": {
            "begin": "(?=^target Python\\b)",
            "patterns": [
                {
                    "include": "#top-level"
                },
                {
                    "begin": "(\\{=)",
                    "end": "(=\\})",
                    "name": "meta.embedded.block.py",
                    "patterns": [{
                        "include": "source.python"
                    }]
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.lflang",
            "begin": "(^[ \\t]+)?(?=//)",
            "end": "(?=$)"
        },
        "blockcomment": {
            "name": "comment.block.lflang",
            "begin": "/\\*(\\*)?(?!/)",
            "end": "\\*/"
        },
        "target-specification": {
            "name": "meta.targetspec.lflang",
            "begin": "(?=^target\\b)",
            "end": ";|(?<=}.*)$|(?<=target[^\\{]*)$",
            "patterns": [
                {
                    "include": "#general"
                },
                {
                    "name": "constant.language.lflang",
                    "match": "\\b(C|Cpp|Python|TypeScript)\\b"
                },
                {
                    "name": "keyword.control.lflang",
                    "match": "\\b(target)\\b"
                },
                {
                    "name": "variable.parameter.lflang",
                    "match": "(?<=(^|,)(\\s)*)\\b(\\w+)\\b(?=(\\s)*:)"
                }
            ]
        },
        "import-statement": {
            "name": "meta.import.lflang",
            "begin": "(?=^import\\b)",
            "end": ";|(?<=}.*)$|(?<=import[^\\{]*)$",
            "patterns": [
                {
                    "include": "#general"
                },
                {
                    "name": "keyword.other.lflang",
                    "match": "\\b(import)\\b|\\b(as)\\b|\\b(from)\\b"
                }
            ]
        },
        "reaction-declaration": {
            "patterns": [
                {
                    "include": "#general"
                },
                {
                    "name": "keyword.control.lflang",
                    "match": "\\b(reactor)\\b|!|\\b(main reactor)\\b"
                }
            ]
        },
        "reactor-block": {
            "patterns": [
                {
                    "include": "#general"
                }
            ]
        }
    },
    "patterns": [
        {
            "include": "#global"
        }
    ],
    "uuid": "cd57a55d-0af5-4750-a6a0-3b7108553c2a"
}