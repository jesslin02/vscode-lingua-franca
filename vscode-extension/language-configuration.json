{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["{=", "=}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["{=", "=}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["'''", "'''"],
        ["\"\"\"", "\"\"\""]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["{=", "=}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["'''", "'''"],
        ["\"\"\"", "\"\"\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": {
            "pattern": "^((?!\\/\\/).)*(\\{[^}\"]*|\\([^)\"]*|\\[[^\\]\"]*)$"
        },
        "decreaseIndentPattern": {
            "pattern": "^\\s*(=\\}|[\\)\\}\\]]).*$"
        }
    }
}
